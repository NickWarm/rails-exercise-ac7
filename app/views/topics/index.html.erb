<h1>Topics list</h1>

<p><%= link_to "新增文章", new_topic_path, :class => "btn btn-primary" %></p>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Author</th>
  </tr>
<% @topics.each do |t| %>
  <tr>
    <td><%= link_to t.title, topic_path(t) %></td>
    <td><%= t.user.display_name %></td>
    <td><%= t.created_at.to_s(:short) %></td>
  </tr>
<% end %>
</table>

<%= paginate @topics %>
